<h1>Restaurants list :</h1>

<% @restaurants.each do |restaurant| %>
  <ul>
    <li>
      <%= link_to restaurant.name, restaurant_path(restaurant) %>, <%= restaurant.address %>
      <%= link_to restaurant_path(restaurant), method: :delete do %>
        <i class="fa fa-trash-alt"></i>
      <% end %>
    </li>
  </ul>
<% end %>


<hr>

<%= link_to "+ Add a restaurant", new_restaurant_path %>
